div.content-tabs
  div.tabs.mod-content
    div.tabs-data
      ul.tabs-list
        li.list-item(ng-repeat="tab in applicationCtrl.travelFactory.getTabs()"
          ng-class="{ 'is-active' : tab.active }")
          span.item-text(ng-click="applicationCtrl.travelFactory.setTab(tab.name)") {{ tab.name }}

div.content-data.mod-tabs
  div.data-holder

    div.form.mod-p20(ng-if="applicationCtrl.travelFactory.isTab('Flights')")
      div(flights sync-service="applicationCtrl.sync" travel-factory="applicationCtrl.travelFactory")

    div.form.mod-p20.mod-pt10(ng-if="applicationCtrl.travelFactory.isTab('Hotels')")
      div(hotels sync-service="applicationCtrl.sync")
