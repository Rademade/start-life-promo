mixin mail-main-title(text,marginBottom)
  tr
    td(width="100%" align="center" style="width:100%;height:100%; text-align: center; font-family: Arial, sans-serif; font-size: 24px;color: #11beec;")
      span.title-text(style="font-family: Arial, sans-serif; font-size: 24px;color: #11beec;")= text
  tr
    +spacer(marginBottom)