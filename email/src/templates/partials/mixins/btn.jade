mixin mail-main-btn(text,marginBottom)
  tr
    td(width="100%" align="center" style="width:100%;height:100%;")
      table(border="0" cellpadding="0" width="165" bgcolor="#ff5f5c" cellspacing="0" style="margin:0;padding:0;")
        tr
          +spacer(10)
        tr
          td(width="100%" align="center" style="width:100%;height:100%;")
            table(border="0" cellpadding="0" width="100%" bgcolor="#ff5f5c" cellspacing="0" style="margin:0;padding:0;")
              tr
                +spacer(15)
                td.btn-text(width="100%" align="center" style="width:100%;height:100%; color: #ffffff; font-family: Arial, sans-serif; font-size: 13px;text-decoration: none;")
                  a.btn-text(style="width:100%;height:100%; color: #ffffff; font-family: Arial, sans-serif; font-size: 13px; text-decoration: none;" href="#")= text
                +spacer(15)

        tr
          +spacer(10)

  tr
    +spacer(marginBottom)